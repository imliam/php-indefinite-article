{
    "name": "imliam/php-indefinite-article",
    "description": "Determine the indefinite article of an English term",
    "keywords": [
        "imliam",
        "php-indefinite-article"
    ],
    "homepage": "https://github.com/imliam/php-indefinite-article",
    "license": "MIT",
    "authors": [
        {
            "name": "Liam Hammett",
            "email": "liam@liamhammett.com",
            "homepage": "https://liamhammett.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.1|^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0|^9.0"
    },
    "autoload": {
        "psr-4": {
            "ImLiam\\IndefiniteArticle\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ImLiam\\IndefiniteArticle\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "test:windows": "vendor\\bin\\phpunit",
        "test-coverage:windows": "vendor\\bin\\phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    }
}
